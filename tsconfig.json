{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",                                
    "module": "ESNext",                          
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,                             
    "outDir": "./build",                             
    "noEmit": true,                             
    "strict": true,                                 
    "noImplicitAny": true,                       
    "noUnusedLocals": true,                      
    "noUnusedParameters": true,                 
    "allowSyntheticDefaultImports": true,        
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    "src/types"
  ]
}
